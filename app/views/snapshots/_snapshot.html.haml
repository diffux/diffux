.snapshot-card
  = link_to snapshot do
    - if snapshot.image?
      = image_tag snapshot.image.url(:thumb)
    - else
      .glyphicon.glyphicon-time.snapshot-card-pending

  - if snapshot.accepted?
    .snapshot-indicator.glyphicon.glyphicon-ok-sign
  - elsif snapshot.rejected?
    .snapshot-indicator.glyphicon.glyphicon-remove-sign
  - else
    .snapshot-indicator.glyphicon.glyphicon-question-sign
  .time-ago
    = time_tag snapshot.created_at do
      = time_ago_in_words(snapshot.created_at) + ' ago'
  - if snapshot.diff_from_previous
    .diff
      = number_to_percentage(snapshot.diff_from_previous)
      diff
