- provide :title, 'Edit Viewport'

= render 'shared/breadcrumbs', crumbs: [['Edit Viewport']]

%h1= yield :title

= form_for @viewport, html: { role: 'form' } do |f|
  = render 'shared/error_explanation', instance: @viewport

  .form-group
    = f.label :width, class: 'control-label'
    = f.text_field :width, class: 'form-control',
      autofocus: true, required: true
  .form-group
    = f.label :user_agent, class: 'control-label'
    %small= t('.user_agent_help')
    = f.text_area :user_agent, rows: 3, class: 'form-control'
  .form-group
    = f.submit class: 'btn btn-primary'
